<article id="content">
    <section class="demo-section">
        <h2>Cross-Site Scripting (XSS)</h2>
        
        <div>
            Search product:
            <input type="text" id="searchTerm" placeholder="Search...">
            <button onclick="alert('Searching products...')">Search</button>
            
            <!-- This demonstrates why proper output encoding is critical -->
            <p>Recent search: <span id="lastSearch"></span></p>
        </div>
        <script>
            // Demonstration without execution
            function recordLastSearch() {
                const searchTerm = document.getElementById('searchTerm').value;
                
                // Only allows alphanumeric input
                if (/^[a-zA-Z0-9\s]*$/.test(searchTerm)) {
                    document.getElementById('lastSearch').textContent = searchTerm;
                }
            }
            
            // Attach to form field change demonstration only
            const searchField = document.getElementById('searchTerm');
            searchField.addEventListener('change', recordLastSearch);
        </script>
    </section>
    <section class="demo-section">
        <h2>Broken Authentication</h2>
        
        <!-- Demonstration without actual login -->
        <form id="loginForm" style="margin-bottom: 1rem;">
            Username: <input type="text"><br>
            Password: <input type="password"><br>
            
            <button onclick="validateLogin()">Log In</button>
        </form>
        <!-- How to fix: Implement proper account lockout policies -->
        <div class="security-advice">
            If implemented properly, multiple failed attempts would trigger:
            <ul>
                <li>Account lockouts after X consecutive failures</li>
                <li>Password reset requirements</li>
                <li>Temporary suspension notifications</li>
            </ul>
        </div>
        <script>
            // Demonstrates why brute force attacks are ineffective when rate-limited
            function validateLogin() {
                const username = document.querySelector('#loginForm input[type="text"]').value;
                
                if (username.length > 0) {
                    console.log(`Attempted login for: ${username}`);
                    
                    // Show how to implement proper account lockout logic
                    checkFailedAttempts(username);
                }
            }
            function checkFailedAttempts(username) {
                // Would track attempts in real implementation
                const failed = Math.floor(Math.random() * 3); // Simulated
                
                if (failed > 2) {
                    console.log(`Account locked after ${failed} failed attempts`);
                } else {
                    console.log('Login attempt completed');
                }
            }
        </script>
    </section>
    <footer style="font-size: .8em;">
